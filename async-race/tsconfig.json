{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "composite": true,
        "emitDeclarationOnly": true,
        "allowImportingTsExtensions": true,
    },
    "include": ["src/**/*.ts"]
}